@model IEnumerable<ASPLearn.DataLayer.Entities.Course.CourseGroup>
@{
}
<div class="main-menu">
	<div class="container">
		<nav>
			<span class="responsive-sign"><i class="zmdi zmdi-menu"></i></span>
			<ul>
				@foreach (var group in Model.Where(g => g.ParentId == null))
				{
					<li>
						<a href="/Course?SelectedGroups=@group.GroupId"> @group.GroupName </a>
						@if (Model.Any(g => g.ParentId == group.GroupId))
						{
							<ul>
								@foreach (var subGroup in Model.Where(g => g.ParentId == group.GroupId))
								{
									<li><a href="/Course?SelectedGroups=@subGroup.GroupId"> @subGroup.GroupName </a></li>
								}
							</ul>
						}
					</li>
				}
			</ul>
		</nav>
	</div>
</div>