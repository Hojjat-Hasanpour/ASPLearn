@using ASPLearn.Core.Convertors
@using ASPLearn.DataLayer.Entities.Course
@model (List<CourseComment> ListComments, int PageCount)

@{
	Layout = null; 
}

@foreach (var item in Model.ListComments)
{
	<!-- row -->
	<div class="comment-row">
		<img src="/UserAvatar/@item.User.UserAvatar" alt="Something went wrong!">
		<div class="left-col">
			<h3> @item.User.UserName </h3>
			<span>@item.CreateDate.ToShamsi()</span>
			<p>
				@item.Comment
			</p>
		</div>
	</div>
	<!-- /row -->
}

<nav aria-label="Page navigation">
	<ul class="pagination justify-content-center">

		@for (var i = 1; i <= Model.PageCount; i++)
		{
			<li class="page-item"><a class="page-link" onclick="pageComment(@i)">@i</a></li>
		}

	</ul>
</nav>
